                                {
                                    "nodeType": "paragraph",
                                    "data": {},
                                    "content": [
                                        {
                                            "nodeType": "text",
                                            "value": "You must make a minimum of 10 picks during a season to be eligible to win.",
                                            "marks": [],
                                            "data": {}
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
